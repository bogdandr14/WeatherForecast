<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/day_bg"
    tools:context=".activities.MainActivity"
    android:overScrollMode="never"
    android:padding="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/idHomeRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/idLocationManager"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/favorite"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/idCityNameTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="10dp"
                    android:text="Craiova"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/idSettings"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/ic_settings"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"/>
            </LinearLayout>


            <TextView
                android:id="@+id/idTemperatureNowTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idLayout"
                android:gravity="center_horizontal"
                android:text="35°C"
                android:textColor="@color/black"
                android:textSize="70dp" />

            <ProgressBar
                android:id="@+id/idLoadingPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/idWeatherNowIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/idTemperatureNowTV"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/sunny_weather_icon" />


            <TextView
                android:id="@+id/idConditionNowTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idWeatherNowIcon"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Sunny"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/idHourlyWeatherText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="10dp"
            android:text="Weather Now"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/idHomeRL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>

        <GridLayout
            android:id="@+id/idDetailsGL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/idHourlyWeatherText"
            android:columnCount="2"
            android:rowCount="4"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/today_details">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Feels like: 36°C"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Pressure: 756mmHg"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Wind Speed: 5km/h"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Wind Direction: NW"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Humidity: 10%"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Clouds: 5%"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Visibility: 10km"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="UV Index: 2"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </GridLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idWeatherRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/idDetailsGL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forecastMB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#078108"
            android:text="7-day Forecast"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/idWeatherRV"
            tools:layout_editor_absoluteX="7dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>